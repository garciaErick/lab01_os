#include "egarcia_argtok.h"
#include <stdio.h>
#include <stdlib.h>

int main(){
  char* c = "os is my favorite class";
  argtok(c);
  return 0;
}

/* void hello(){ */
/*   char* c = "hello world"; */
/* } */

char** argtok(char* c){
  char **tokens;
  tokens = count_tokens(c);
  /* tokens */
  int count = 0;
  int index = 0;
  int i     = 0;
  for(i = 0; c[i] != '\0'; i++){
    if(c[i] == ' '){
      tokens[index] = strcopy(c, tokens[index], i, count + 1);
      count         = -1;
      index++;
    }
    else if(c[i+1] == '\0'){
      tokens[index] = strcopy(c, tokens[index], i, count + 2);
      count         = -1;
      index++;
    }
    count++;
  }
  return tokens;
}

char* strcopy(char* source, char* destination, int index, int size){
  printf("Count: %i\n", size);
  destination = malloc(sizeof(char) * (size));
  printf("Size: %i", size);
  int i_source;
  int i_dest = 0; 
  /* for(i_source = index; i_source < (i_source + size); i_source++, i_dest++){ */
  /*   printf("hello"); */
  /*   destination[i_dest] = source[i_source]; */
  /* } */
  return destination;
}

char** count_tokens(char* c){
  int i; 
  int count = 0;
  for(i = 0; c[i] != '\0'; i++){
    if(c[i] == ' '){
      count++;
    }
  }
  char **r = calloc(count + 2, sizeof(char*));
  return r;
}
